<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#162633"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/clearData"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:textAlignment="center"
        android:textColor="#FFE178"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/clearDataText"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:textAlignment="center"
        android:textColor="#FFE178"
        app:layout_constraintStart_toStartOf="@+id/clearData"
        app:layout_constraintTop_toTopOf="@+id/clearData"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/language"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginTop="96dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:textAlignment="center"
        android:textColor="#FFE178"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/languageText"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:textAlignment="center"
        android:textColor="#FFE178"
        app:layout_constraintStart_toStartOf="@+id/language"
        app:layout_constraintTop_toTopOf="@+id/language"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/deleteBox"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="@+id/clearData"
        app:layout_constraintTop_toTopOf="@+id/clearData" />

    <TextView
        android:id="@+id/languageIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:textAlignment="center"
        android:textColor="#FFE178"
        app:layout_constraintEnd_toEndOf="@+id/language"
        app:layout_constraintTop_toTopOf="@+id/language"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/about"
        android:layout_width="256dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        android:adjustViewBounds="true"
        android:autoSizeTextType="uniform"
        android:cropToPadding="true"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:textAlignment="center"
        android:textColor="#FFE178"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clearData"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>